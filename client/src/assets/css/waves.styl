body
  header 
    background-image: linear-gradient(180deg, #0094d9, #eb008b)
    @media $media_sm
      background-image: linear-gradient(115deg, #0094d9, #eb008b)

  footer
    background: linear-gradient(180deg, #0094d9, #a709ff)
    @media $media_sm
      background: linear-gradient(127deg, #0094d9, #a709ff)

  &.bg-orange
    header
      background-image: linear-gradient(180deg, #4b0997, #b48214)
      @media $media_sm
        background-image: linear-gradient(306deg, #4b0997, #b48214)
    footer
      background-image: linear-gradient(180deg, #b48214, #4b0997)
      @media $media_sm
        background-image: linear-gradient(306deg, #b48214, #4b0997)

  &.bg-blue-green
    header
      background-image: linear-gradient(180deg, #4b0997, #14b472)
      @media $media_sm
        background-image: linear-gradient(307deg, #4b0997, #14b472)
    footer
      background-image: linear-gradient(180deg, #14b472, #4b0997)
      @media $media_sm
        background-image: linear-gradient(307deg, #14b472, #4b0997)
  
  &.bg-purple-red
    header
      background-image: linear-gradient(180deg, #a050fc, #4b0997)
      @media $media_sm
        background-image: linear-gradient(109deg, #a050fc, #4b0997)
    footer
      background-image: linear-gradient(180deg, #4b0997, #a050fc)
      @media $media_sm
        background-image: linear-gradient(109deg, #4b0997, #a050fc)
  
  &.bg-purple
    header
      background-image: linear-gradient(180deg, #a050fc, #4b0997)
      @media $media_sm
        background-image: linear-gradient(236deg, #a050fc, #4b0997)
    footer
      background-image: linear-gradient(180deg, #4b0997, #a050fc)
      @media $media_sm
        background-image: linear-gradient(236deg, #4b0997, #a050fc)
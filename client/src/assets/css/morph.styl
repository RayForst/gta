
/* SVG Morph */
.morph-wrap {
	position: absolute;
	top: -20%;
	left: 0;
	bottom: 0;
	width: 100%;
  height: 100vh;
	overflow: hidden;
	display: flex;
	align-items: center;
	justify-content: center;
	pointer-events: none;
  z-index: -1;
	max-width: 100%;
	overflow-x: hidden;
}

.morph {
	position: absolute;
	height: 100%;
	fill: rgba(#4a90e2, 0.05);
	flex: none;
  top: 0;
	width: 100%;
}

header nav a
  transition: opacity +$transition_link

.breadcrumbs
  color:#8da5df
  font-size: 14px
  margin-bottom: 30px

  a
    color:#eb008b
    text-decoration: none

  span
    color: #fff
    text-transform: capitalize

  a, span
    margin: 0 6px
  
  a:first-child
    margin-left: 0

.align-center 
  display: flex
  align-items: center


// gradients
body
  header .waveWrapperInner
    background: linear-gradient(127deg, #a709ff, #0094d9);
    //animation: Gradient 18s ease infinite;
    //background-size: 160% 160%;
  footer .waveWrapperInner
    background: linear-gradient(127deg, #0094d9, #a709ff);
    //animation: Gradient 18s ease infinite;
    //background-size: 160% 160%;

  &.bg-orange
    header .waveWrapperInner
      background-image: linear-gradient(306deg, #4b0997, #b48214);
    footer .waveWrapperInner
      background-image: linear-gradient(306deg, #b48214, #4b0997);

  &.bg-blue-green
    header .waveWrapperInner
      background-image: linear-gradient(307deg, #4b0997, #14b472);
    footer .waveWrapperInner
      background-image: linear-gradient(307deg, #14b472, #4b0997);
  
  &.bg-purple-red
    header .waveWrapperInner
      background-image: linear-gradient(109deg, #a050fc, #4b0997);
    footer .waveWrapperInner
      background-image: linear-gradient(109deg, #4b0997, #a050fc);
  
  &.bg-purple
    header .waveWrapperInner
      background-image: linear-gradient(236deg, #a050fc, #4b0997);
    footer .waveWrapperInner
      background-image: linear-gradient(236deg, #4b0997, #a050fc);


@keyframes Gradient {
	0% {
		background-position: 0% 50%
	}
	50% {
		background-position: 100% 50%
	}
	100% {
		background-position: 0% 50%
	}
}

.overflow-h
  overflow hidden


@media $media_md {
  .hide_md {
    display: none;
  }
}

section
  .owl-theme .owl-dots .owl-dot.active span,
  .owl-theme .owl-dots .owl-dot:hover span
    background: #eb008b

  .owl-theme .owl-nav.disabled + .owl-dots
    margin-top: 20px
    
  .owl-dots-left
    .owl-theme .owl-dots
      text-align: left
  
  .owl-dots-right
    .owl-theme .owl-dots
      text-align: right
@import "~normalize.css"

$media_xsm = 'only screen and (min-width: 34em)'
$media_sm = 'only screen and (min-width:48em)'
$media_md = 'only screen and (min-width: 64em)'

$transition_link = ' 0.3s ease'

body
  font-family: 'Montserrat', sans-serif
  min-width: 320px

#app
  display: flex
  min-height: 100vh
  flex-direction: column

.content
  flex: 1

.container-fluid
  max-width: 1400px
  margin: 0 auto

  &.mid
    max-width: 1200px

// typo
h1
  font-size: 32px
  font-weight: bold
  line-height: 1.25
  color: #ffffff
  max-width: 600px

  @media only screen and (min-width:48em) 
    font-size: 36px

h2 
  font-size: 32px
  font-weight: bold
  color: #000000
  margin-bottom: 10px
  line-height: 1.5

h3
  font-size: 24px
  font-weight: bold
  line-height: 1.5
  color: #000000

h4
  font-size: 18px
  font-weight: bold
  line-height: 1.5


p.caption
  opacity: 0.5
  color: #000000
  font-size: 18px
  line-height: 1.5
  margin-top: 0
  max-width 500px
  margin: 0 auto

.section-heading
  text-align: center
  margin-bottom: 50px

// buttons

a, button
  &.ui-btn
    border-radius: 26px
    background-color: #eb008b
    font-size: 16px
    font-weight: bold
    color:#fff
    border: none
    text-decoration: none
    line-height: 20px
    padding: 17px 25px
    min-width: 150px
    display: inline-block
    text-align: center
    box-sizing: border-box
    cursor: pointer
    
    @media $media_sm
      padding: 17px 50px
  
  &.ui-secondary
    background-color: #0094d9


.link
  font-size: 16px
  font-weight: bold
  color: #0094d9
  text-decoration: none
  transition: color +$transition_link

  &:hover
    color:#fff100

  .icon
    margin-left: 6px

.owl-wrap
  padding-bottom: 90px

  .owl-nav 
    left: 160px
    position: absolute
    top: 390px

.heading-caption
  font-size: 18px
  line-height: 1.72
  color: #ffffff
  max-width: 520px
  margin-bottom: 30px

custom_scale(base, value)
  round(base / 100 * value)

.graphics-wrap
  height: 330px;
  position: relative;
  padding: 40px 0;
  box-sizing: border-box;
  max-width: 390px;
  margin-left: auto;

  @media $media_md
    max-width: 500px;

.graphics
  position: absolute
  //background: red
  width: 100%

  &:before
    content: ''
    display: block
    padding-top: 100%

  .graph
    position: absolute

    img
      height: 100%

    .line
      position: absolute
      width: 100%
      height: 73%
      transform: rotate(-30deg)
      z-index: -1
      top: 25%

      &.line-2
        top: 20%;
        height: 84%;

        &:before
          left: 49%
      
      &:before
        content: ''
        position: absolute
        top:0
        left: -10%
        height: 100%
        width: 2000px
        opacity: 0.1
        padding: 0
        background: #fff
        border-radius: 110px
        
